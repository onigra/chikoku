h1 Home#index

- if current_user
  h2 勤務地
  - if current_user.work_place
      = link_to '更新', work_places_edit_path
  - else
      = link_to '勤務地情報登録', work_places_new_path
  h2 Slack
  - if current_user.slack_notification
      = button_to '送信', send_message_slack_path
      = link_to '更新', slack_edit_path
  - else
      = link_to 'Slack情報登録', slack_new_path
- else
  = link_to 'ログイン', '/auth/twitter'
